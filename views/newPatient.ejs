<!-- pop up 1 -->
        <div id="popup" class="hidden ">
          <div class="relative bg-white border shadow-sm rounded-xl dark:bg-neutral-900 dark:border-neutral-700 dark:shadow-neutral-700/70 p-4 md:p-5">
              <!-- cross -->
              <svg class="absolute top-0 right-0 m-3 cursor-pointer" xmlns="http://www.w3.org/2000/svg" width="24" height="24" 
