<body class="bg-white">
    <%- include('./partials/navbar') %>
  <!-- SECTION CONTACTS -->
  <section class="mapSection">
    <h2 class="text-center text-3xl py-8">Where we are</h2>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d746.6695897850007!2d-8.778074570764819!3d41.532907302620806!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd244bbb11d6a79f%3A0x35c59193a9bc99ad!2sR.%2025%20de%20Abril%201%2C%204740-002%20Esposende!5e0!3m2!1sen!2spt!4v1675298529249!5m2!1sen!2spt" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
  </section>
  <section class="getInTouch">
    <div class="contactsSection">
      <h2 class="text-center text-3xl">Contactos</h2>
      <div class="contactsDetails flex flex-col items-center mt-8">
        <span class="mobileContacts flex items-center">
          <img src="images/flaticon-smartphone.png" alt="Iphone icons created by Good Ware - Flaticon" class="w-6 h-6 mr-2"/>
          <span class="indicative">(+351)</span> 964 656 966 *
        </span>
        <div class="custoChamada"><span>* (chamada para a rede móvel nacional)</span></div>
        <span class="emailContacts flex items-center mt-4">
          <img src="images/flaticon-email.png" alt="Email icons created by Good Ware - Flaticon" class="w-6 h-6 mr-2"/> hello@raizdigital.net
        </span>
        <span class="openingHours flex items-center mt-4">
          <img src="images/flaticon-hours.png" alt="Info icons created by Circlon Tech - Flaticon" class="w-6 h-6 mr-2">Segunda - Sexta<br>09:00 - 18:00
        </span>
      </div>
    </div>
    <div class="formSection">
      <h2 class="text-center text-3xl mb-4">Send us a message</h2>
      <form class="form max-w-md mx-auto" id="form1" action="https://formsubmit.co/mauro.busso12@gmail.com" method="POST">
        <input name="name" type="text" autocomplete="on" spellcheck="true" class="w-full px-4 py-2 rounded-md border border-gray-300 mb-3" placeholder="Name" required/>
        <input name="email" type="email" autocomplete="on" spellcheck="true" class="w-full px-4 py-2 rounded-md border border-gray-300 mb-3" placeholder="Email" required/>
        <input name="subject" type="text" autocomplete="on" spellcheck="true" class="w-full px-4 py-2 rounded-md border border-gray-300 mb-3" placeholder="Subject" required/>
        <textarea name="message" id="message" cols="30" rows="10" class="w-full px-4 py-2 rounded-md border border-gray-300 mb-3" placeholder="Message" required></textarea>
        <button type="submit" class="w-full bg-blue-500 text-white font-semibold px-4 py-2 rounded-md hover:bg-blue-600 transition duration-200">Send</button>
      </form>
    </div>
  </section>
  <script src="/js/script.js"></script>
  <script src="/node_modules/preline/dist/preline.js"></script>
</body>
</html>